<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <Button
        android:text="Add Event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addEventButton"
        android:layout_marginRight="60.0dp"
        android:layout_marginLeft="60.0dp"
        android:layout_marginTop="60.0dp" />
    <Button
        android:text="Manage Football Events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manageFootballEventsButton"
        android:layout_marginRight="60.0dp"
        android:layout_marginLeft="60.0dp"
        android:layout_marginTop="120.0dp" />
    <Button
        android:text="Manage Volleyball Events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manageVolleyballEventsButton"
        android:layout_marginRight="60.0dp"
        android:layout_marginLeft="60.0dp"
        android:layout_marginTop="180.0dp" />
    <Button
        android:text="Manage Tennis Events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manageTennisEventsButton"
        android:layout_marginRight="60.0dp"
        android:layout_marginLeft="60.0dp"
        android:layout_marginTop="240.0dp" />
</RelativeLayout>